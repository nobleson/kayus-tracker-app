<body class="user-profile">
  <div class="wrapper ">
    <div class="sidebar" data-color="orange">
        <% include sidebar.ejs%>
    </div>
    <div class="main-panel" id="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent  bg-primary  navbar-absolute">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <div class="navbar-toggle">
              <button type="button" class="navbar-toggler">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </button>
            </div>
            <a class="navbar-brand" href="#pablo">User Profile</a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
            <span class="navbar-toggler-bar navbar-kebab"></span>
          </button>
             <% include navbar.ejs %>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="panel-header panel-header-sm">

      </div>
      <div class="content">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header">
                <h5 class="title">Edit Profile</h5>
              </div>
              <div class="card-body">
                <form>
                  <div class="row">
                    <div class="col-md-5 pr-1">
                      <div class="form-group">
                        <label>Organization (disabled)</label>
                        <input type="text" class="form-control" disabled="" id="organization" placeholder="Organization" value="Organization">
                      </div>
                    </div>
                    <div class="col-md-3 px-1">
                      <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" placeholder="Username" id="username" value="<%= user.username%>">
                      </div>
                    </div>
                    <div class="col-md-4 pl-1">
                      <div class="form-group">
                        <label for="exampleInputEmail1">Email address  (disabled)</label>
                        <input type="email" class="form-control" placeholder="Email"  id="email"  value="<%= user.email%>"  disabled="">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6 pr-1">
                      <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control" placeholder="First Name" id="firstName" value="<%= user.firstName %>">
                      </div>
                    </div>
                    <div class="col-md-6 pl-1">
                      <div class="form-group">
                        <label>Last Name  (Surname)</label>
                        <input type="text" class="form-control" placeholder="Last Name" id="lastName" value="<%= user.lastName %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Phone Number   (disabled)</label>
                        <input type="number" class="form-control" placeholder="Phone number" id="phoneNumber" disabled="" value="<%= user.phoneNumber %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" placeholder="Contact Address" id="address" value="<%= user.address %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>City</label>
                        <input type="text" class="form-control" placeholder="City" id="city" value="<%= user.city %>">
                      </div>
                    </div>
                    <div class="col-md-4 px-1">
                      <div class="form-group">
                        <label>Country</label>
                        <input type="text" class="form-control" placeholder="Country" id="country" value="<%= user.country %>">
                      </div>
                    </div>
                    <div class="col-md-4 pl-1">
                      <div class="form-group">
                        <label>Postal Code</label>
                        <input type="number" class="form-control" placeholder="ZIP Code" id="zipCode" value="<%= user.zipCode %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4 pr-1">
                      <div class="form-group">
                        <label>Facebook</label>
                        <input type="text" class="form-control" placeholder="Facebook Channel" id="facebookChannel" value="<%= user.facebookChannel %>">
                      </div>
                    </div>
                    <div class="col-md-4 px-1">
                      <div class="form-group">
                        <label>Twitch</label>
                        <input type="text" class="form-control" placeholder="Twitch Channel" id="twitchChannel" value="<%= user.twitchChannel %>">
                      </div>
                    </div>
                    <div class="col-md-4 pl-1">
                      <div class="form-group">
                        <label>YouTube</label>
                        <input type="text" class="form-control" placeholder="Tube Channel" id="youTubeChannel" value="<%= user.youTubeChannel %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>About Organization</label>
                        <textarea rows="4" cols="80" class="form-control" placeholder="Here can be your description" id="info" value="<%= user.info %>"><%= user.info %></textarea>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <button type="button" class="btn btn-primary" id="edit_save_changes_btn">Save Changes</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div class="card card-user">
              <div class="image">
                <img src="img/bg5.jpg" alt="...">
              </div>
              <div class="card-body">
                <div class="author">
                  <a href="#">
                    <img class="avatar border-gray" src="img/mike.jpg" alt="...">
                    <h5 class="title"><%=user.firstName %>  <%= user.lastName %></h5>
                  </a>
                  <p class="description">
                    <%= user.username %>
                  </p>
                </div>
                <p class="description text-center"><%= user.info%></p>
              </div>
              <hr>
              <div class="button-container">
                <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg" title="Facebook channel">
                  <i class="fab fa-facebook-f"></i>
                </button>
                <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg" title="YouTube channel">
                  <i class="fab fa-youtube-square"></i>
                </button>
                <button href="#" class="btn btn-neutral btn-icon btn-round btn-lg" title="Twitch channel">
                  <i class="fab fa-twitch"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer">
        <% include footer.ejs %>
      </footer>
    </div>
  </div>
  <!--   Core JS Files   -->
  <script src="js/core/jquery.min.js"></script>
  <script src="js/core/popper.min.js"></script>
  <script src="js/core/bootstrap.min.js"></script>
  <script src="js/plugins/perfect-scrollbar.jquery.min.js"></script>
  <!--  Google Maps Plugin    -->
  <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
  <!-- Chart JS -->
  <script src="js/plugins/chartjs.min.js"></script>
  <!--  Notifications Plugin    -->
  <script src="js/plugins/bootstrap-notify.js"></script>
  <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="js/now-ui-dashboard.min.js?v=1.5.0" type="text/javascript"></script><!-- Now Ui Dashboard DEMO methods, don't include it in your project! -->
  <script src="demo/demo.js"></script>
  <script src="/js/plugins/axios.min.js"></script>
  <script src="js/custom/user.js"></script>
  <script>
  
(function() {
    'use strict';
  async function saveChanges(){
    let user = {
        firstName: document.getElementById("firstName").value,
        lastName: document.getElementById("lastName").value,
        address: document.getElementById("address").value,
        country: document.getElementById("country").value,
        city: document.getElementById("city").value,
        info: document.getElementById("info").value,
        zipCode: document.getElementById("zipCode").value,
        facebookChannel: document.getElementById("facebookChannel").value,
        twitchChannel: document.getElementById("twitchChannel").value,
        youTubeChannel: document.getElementById("youTubeChannel").value
    }
    loadSpinner($("#edit_save_changes_btn"), "Saving changes")
    await User.update('/api/user/current', user).then( res => {
        resetSpinner($("#edit_save_changes_btn"), "Save Changes")
        showSuccessNotification('top','right')
    }).catch(function(e){
        resetSpinner($("#edit_save_changes_btn"), "Save Changes")
        showErrorNotification('top','right')
    })
  }
  function loadSpinner(el, msg){
    $(el).prop("disabled", true);
        // add spinner to button
        $(el).html(
          `<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> ${msg}`
        );
  }

  function resetSpinner(el, msg){
    $("span").remove(".spinner-border");
    $(el).text(msg);
    $(el).prop("disabled", false);
  }
  function showSuccessNotification(from, align){
   let color = 'primary';

    $.notify({
        icon: "now-ui-icons ui-1_bell-53",
        message: "Changes saved successfully!"

      },{
          type: color,
          timer: 8000,
          placement: {
              from: from,
              align: align
          }
      });
  }
  function showErrorNotification(from, align){
   let color = 'danger';

    $.notify({
        icon: "now-ui-icons ui-1_bell-53",
        message: "Oops! Changes fail to save! Try again"

      },{
          type: color,
          timer: 8000,
          placement: {
              from: from,
              align: align
          }
      });
  }
  $(document).ready(function (){

    $("#edit_save_changes_btn").on('click', function(){
       saveChanges()
    })
  })
})();


  
  </script>
</body>

</html>